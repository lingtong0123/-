<body>
  <h1>Timestamp Microservice</h1>
  
  <div class="card">
    <h2>API 使用方法</h2>
    <code>GET /api/[date]</code>
    <p>示例:</p>
    <ul>
      <li><code>/api/2023-01-01</code></li>
      <li><code>/api/1672531200000</code></li>
      <li><code>/api</code> (获取当前时间)</li>
    </ul>
  </div>
  
  <div class="card">
    <h2>测试 API</h2>
    <input type="text" id="dateInput" placeholder="输入日期或时间戳">
    <button onclick="testApi()">测试</button>
    <div id="result"></div>
  </div>
  
  <div class="card">
    <h2>示例响应</h2>
    <pre>{
  "unix": 1672531200000,
  "utc": "Sun, 01 Jan 2023 00:00:00 GMT"
}</pre>
  </div>

  <script>
    // 模拟后端API功能
    function handleApiRequest(dateString) {
      let date;
      
      if (!dateString) {
        date = new Date();
        return {
          unix: date.getTime(),
          utc: date.toUTCString()
        };
      }
      
      // 检查是否是Unix时间戳
      if (/^\d+$/.test(dateString)) {
        date = new Date(parseInt(dateString));
      } else {
        date = new Date(dateString);
      }
      
      if (isNaN(date.getTime())) {
        return { error: "Invalid Date" };
      }
      
      return {
        unix: date.getTime(),
        utc: date.toUTCString()
      };
    }

    // 测试函数
    function testApi() {
      const input = document.getElementById('dateInput').value.trim();
      const result = handleApiRequest(input);
      document.getElementById('result').innerHTML = 
        `<pre>${JSON.stringify(result, null, 2)}</pre>`;
    }
    
    // 初始加载显示当前时间
    window.onload = function() {
      testApi();
    };
  </script>
</body>
